<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activity.MainActivity">
    
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@drawable/header"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esemka Library"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"
        android:layout_above="@id/layoutBot"
        android:layout_below="@id/header"/>

    <LinearLayout
        android:id="@+id/layoutBot"
        android:layout_width="match_parent"
        android:background="@drawable/header"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_nav"
            android:text="Home"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnForum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_nav"
            android:text="Forum"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMyCart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_nav"
            android:text="Cart"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/button_nav"
            android:text="Profile"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"/>



    </LinearLayout>

</RelativeLayout>